<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.worldtraditions.ThirdQuestion">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="throwing cynamonn"/>

    <RadioGroup
        android:id="@+id/radio_g_second_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectAnswer"
            android:text="21"/>

        <RadioButton
            android:id="@+id/radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectAnswer"
            android:text="25"/>

        <RadioButton

            android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectAnswer"
            android:text="30"/>

        <RadioButton
            android:id="@+id/radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectAnswer"
            android:text="40"/>
    </RadioGroup>

    <Button
        android:id="@+id/next_button_3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="moveNext"
        android:text="next"/>

</LinearLayout>
